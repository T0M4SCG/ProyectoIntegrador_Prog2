<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (userLogueado != null) { %>
		<%- include("./partials/headerLogueado") %>
		<% } %>
		<% if(userLogueado == null){ %>
		<%- include("./partials/header") %>
		<% } %>
	<!-- /Header -->
	<!-- product detail -->
	<% let info = resultado.dataValues %>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= info.producto %></h2> 
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= info.imagen %>" alt="<%= info.producto %>" class="product-detail-img">
					<p class="product-detail-description"><%= info.descripcionProd %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < 5; i++ ) { %>
						
							<article>
								<img src="<%= comentarios[i].img_perfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="http://localhost:3000/users/profile/"><%= comentarios[i].nombre_usuario %> </a> </strong><%= comentarios[0].texto_comentario %></p>
									</div>
								</article>
								
								<% } %>
					</section>
					<form class="form" action="http://localhost:3000/products/detalle/<%= info.id %>" method="GET">
						<input class="form-input" type="text" name="comentario" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
<%- include('./partials/footer')  %>
	<!-- /footer -->

</body>	
</html>