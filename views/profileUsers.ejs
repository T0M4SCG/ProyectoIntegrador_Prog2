<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (userLogueado != null) { %>
		<%- include("./partials/headerLogueado") %>
		<% } else { %>
		<%- include("./partials/header") %>
		<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<% let user = info.dataValues %>
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= user.fotodeperfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= user.nombre %></h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul>
						<li><h4><%= user.email %></h4></li>
						<li><%= user.products.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= user.comments.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">

			<!-- Show mis productos -->

		

	<!-- /Mis productos -->
	<div class="col-12">
		<h2 class="products-title">Productos</h2>
	</div>
	<div class="row">
	<% if (user.products.length != 0) { %>
		

		<% for( let i = 0; i < user.products.length; i++ ) { %>
			<% let producto = user.products[i].dataValues %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="http://localhost:3000/products/detalle/<%= producto.id %>">
						<figure class="product-box_image">
							<img src="<%= producto.imagen%>" alt="<%= producto.imagen %>">
						</figure>
						<article class="product-box_data">
							<h2 class="products-title"><%= producto.producto %></h2>
							<p><%= producto.descripcionProd %></p>
							<p>Comentarios: <%= producto.commentsProd.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>


	<% } else { %>
		<div class="col-12">
			<h2 class="products-title">Este usuario no cuenta con productos</h2>
		</div>
	<% } %>
</div>
</div>
	<!-- footer -->
    <%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>